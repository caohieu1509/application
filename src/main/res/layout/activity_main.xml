                            android:layout_gravity="center"
                            android:textColor="@color/colorText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_tiepnhan"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="onReceiveClick">
                        <ImageView
                            android:id="@+id/img_tiepnhan_navi"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/tiepnhanvagiaoxe"/>
                        <TextView
                            android:id="@+id/tv_tiepnhan_navi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiếp nhận và Giao xe"
                            android:layout_gravity="center"
                            android:textColor="@color/colorText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_tuvan"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="onAdvisoryClick">
                        <ImageView
                            android:id="@+id/img_tuvan_navi"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/tuvan"/>
                        <TextView
                            android:id="@+id/tv_tuvan_navi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tư vấn"
                            android:layout_gravity="center"
                            android:textColor="@color/colorText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_baogia"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="onQuotesClick">
                        <ImageView
                            android:id="@+id/img_baogia"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/baogia"/>
                        <TextView
                            android:id="@+id/tv_baogia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Báo giá"
                            android:layout_gravity="center"
                            android:textColor="@color/colorText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_tiendo_navi"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"

                        android:onClick="onProgressClick">
                        <ImageView
                            android:id="@+id/img_tiendo_navi"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/theoidoiriendo"/>
                        <TextView
                            android:id="@+id/tv_tiendo_navi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theo dõi tiến độ"
                            android:layout_gravity="center"
                            android:textColor="@color/colorText"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_giaoxe"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:onClick="onVehicleHandingClick">
